<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.farmstory.dao.ArticleDAO">
    <insert id="insertArticle">
        INSERT INTO `board_article` set `title`=#{title}, `content`=#{content}, `file`=#{file}, `uid`=#{uid}, `regip`=#{regip}, `rdate`=#{rdate};
    </insert>
    <select id="selectArticle"></select>
    <select id="selectArticles" resultType="kr.co.farmstory.vo.ArticleVO" parameterType="map">
        select a.*, b.nick from `board_article` as a
        join `board_user` as b
        on a.uid = b.uid
        where `parent`=0 and `cate`=#{cate}
        order by no desc
        limit #{start}, 10;
    </select>
    <select id="selectCountTotal" resultType="int">
        select count(`no`) from `board_article` where `parent`=0 and `cate`=#{cate};
    </select>
    <update id="updateArticle"></update>
    <delete id="deleteArticle"></delete>

</mapper>